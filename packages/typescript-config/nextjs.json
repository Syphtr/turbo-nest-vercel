{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "types": ["node", "@types/node", "@prisma/client", ".prisma/client"],
    "plugins": [{ "name": "next" }],
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true
  }
}
